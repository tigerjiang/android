<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_set_bg" >

    <RelativeLayout
        android:id="@+id/set_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_bar_height"
        android:background="@drawable/ic_title_bg" >

        <Button
            android:id="@+id/set_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/text_color_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/head_bar_title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_share_layout"
        android:layout_width="@dimen/set_content_layout_width"
        android:layout_height="@dimen/set_content_layout_height"
        android:layout_below="@+id/set_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/set_share_selector"
        android:clickable="true" >

        <ImageView
            android:id="@+id/set_share_logo"
            android:layout_width="@dimen/set_content_logo_width"
            android:layout_height="@dimen/set_content_logo_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/set_content_layout_margin"
            android:src="@drawable/ic_share_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/set_share_logo"
            android:layout_marginLeft="15px"
            android:text="设置共享"
            android:textColor="@color/set_content_text_color"
            android:textSize="@dimen/set_content_text_size" />

        <ImageView
            android:layout_width="@dimen/set_content_arrows_width"
            android:layout_height="@dimen/set_content_arrows_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_content_layout_margin"
            android:src="@drawable/ic_arrows_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_device_layout"
        android:layout_width="@dimen/set_content_layout_width"
        android:layout_height="@dimen/set_content_layout_height"
        android:layout_below="@+id/set_share_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/set_device_selector"
        android:clickable="true" >

        <ImageView
            android:id="@+id/set_device_logo"
            android:layout_width="@dimen/set_content_logo_width"
            android:layout_height="@dimen/set_content_logo_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/set_content_layout_margin"
            android:src="@drawable/ic_switch_tv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/set_device_logo"
            android:text="切换设备"
            android:layout_marginLeft="15px"
            android:textColor="@color/set_content_text_color"
            android:textSize="@dimen/set_content_text_size" />

        <ImageView
            android:layout_width="@dimen/set_content_arrows_width"
            android:layout_height="@dimen/set_content_arrows_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_content_layout_margin"
            android:src="@drawable/ic_arrows_bg" />
    </RelativeLayout>

</RelativeLayout>