<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/media_list_item_height"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/media_video_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/media_list_item_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/media_list_vertical_divider"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/media_list_item_name_text_size" />

    <TextView
        android:id="@+id/media_video_list_item_author"
        android:layout_width="@dimen/media_content_pic_select_item_width"
        android:layout_height="@dimen/media_list_item_height"
        android:layout_marginRight="@dimen/media_list_item_vertical_divider"
        android:layout_toLeftOf="@+id/media_video_list_item_time"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:maxEms="3"
        android:singleLine="true"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/media_list_item_author_text_size" />

    <TextView
        android:id="@+id/media_video_list_item_time"
        android:layout_width="@dimen/media_list_item_time_width"
        android:layout_height="@dimen/media_list_item_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/media_list_vertical_divider"
        android:gravity="center_vertical|right"
        android:maxLength="6"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/media_list_item_time_text_size" />

</RelativeLayout>